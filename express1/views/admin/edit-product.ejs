<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" 
            action= <% if (typeof edit !== 'undefined') { %> "/admin/edit-product" <% } else { %> "/admin/add-product" <% }%> method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value=<%= (typeof edit !== 'undefined') ? product.title: ''  %>>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value=<%= (typeof edit !== 'undefined') ? product.imageUrl: ''  %>>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value=<%= (typeof edit !== 'undefined') ? product.price: ''  %>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><%= (typeof edit !== 'undefined') ? product.description: ''  %> </textarea>
            </div>
            <% if (typeof edit !== 'undefined') {%>
                <input type="hidden" value=<%= product.id %> name="id">
            <% }%>
            <button class="btn" type="submit"><% if (typeof edit !== 'undefined') { %> Update Product <% } else { %> Add Product <% }%></button>
        </form>
    </main>
</body>

</html>